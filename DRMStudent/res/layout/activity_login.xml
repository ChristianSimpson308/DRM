<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#99BBBC"
    tools:context=".Login" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Name:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40px" />

    <EditText
        android:id="@+id/edtTxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:text="Christian"
        android:textSize="40px" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="400px"
        android:layout_height="400px"
        android:layout_alignParentTop="true"
        android:layout_marginRight="53dp"
        android:layout_toLeftOf="@+id/textView1"
        android:src="@drawable/logo1" />

    <EditText
        android:id="@+id/EdttxtSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/edtTxtName"
        android:layout_marginBottom="101dp"
        android:ems="10"
        android:text="Simpson"
        android:textSize="40px" />

    <TextView
        android:id="@+id/txtSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EdttxtSurname"
        android:layout_alignLeft="@+id/EdttxtSurname"
        android:text="Surname:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40px" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edttxtStudentNumber"
        android:layout_alignLeft="@+id/EdttxtSurname"
        android:text="StudentNumber:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40px" />

    <EditText
        android:id="@+id/edttxtStudentNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/EdttxtSurname"
        android:ems="10"
        android:inputType="number"
        android:text="210023945"
        android:textSize="40px" />

    <Button
        android:id="@+id/bttn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edttxtStudentNumber"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/edttxtStudentNumber"
        android:layout_marginBottom="37dp"
        android:drawableLeft="@drawable/loginsmsll"
        android:text="Login"
        android:textSize="40px" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_alignRight="@+id/imageView1"
        android:layout_marginRight="56dp"
        android:text="Created by Christian Simpson"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
